PERIPHERAL USART1
    REGISTER 0x0078 NAMED U0CTL BYTE-ACCESS
        7 BIT PENA  # RXDMAEN
        6 BIT PEV   # TXDMAEN
        5 BIT SPB   # I2C
        4 BIT CHAR  # XA
        3 BIT LISTEN
        2 BIT SYNC
        1 BIT MM    # MST
        0 BIT SWRST
    END-REGISTER

    REGISTER 0x0079 NAMED U0TCTL BYTE-ACCESS
        7 BIT CKPH
        6 BIT CKPL
        5 BIT SSEL1
        4 BIT SSEL0
        3 BIT URXSE
        2 BIT TXWAKE
        1 BIT STC
        0 BIT TXEPT
    END-REGISTER

    REGISTER 0x007a NAMED U0RCTL BYTE-ACCESS
        7 BIT FE
        6 BIT PE
        5 BIT OE
        4 BIT BRK
        3 BIT URXEIE
        2 BIT URXWIE
        1 BIT RXWAKE
        0 BIT RXERR
    END-REGISTER

    REGISTER 0x007b NAMED U0MCTL  BYTE-ACCESS END-REGISTER
    REGISTER 0x007c NAMED U0BR0   BYTE-ACCESS END-REGISTER
    REGISTER 0x007d NAMED U0BR1   BYTE-ACCESS END-REGISTER
    REGISTER 0x007e NAMED U0RXBUF BYTE-ACCESS END-REGISTER
    REGISTER 0x007f NAMED U0TXBUF BYTE-ACCESS END-REGISTER
END-PERIPHERAL

